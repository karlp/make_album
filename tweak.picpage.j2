    </div>

<script src="/js/keyboard-pagination.min.js"></script>
<script type="text/javascript">
keyboardPagination( '.pagination',
{
    prev: '.pagination-prev',
    next: '.pagination-next',
    up: '.pagination-up'
});
</script>

</body>
</html>
